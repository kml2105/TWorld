<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:backgroundTint="#000"
    android:background="@color/black"
    tools:context="com.semonics.tiktik.Accounts.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_sign_up_main"
        android:backgroundTint="#000"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="T World"
            android:textColor="#fff"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/activity_sign_up_ll_country"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/com_facebook_button_icon"
                android:id="@+id/activity_sign_up_iv_country"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:text="Select Country"
                android:id="@+id/activity_sign_up_tv_country_name"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:id="@+id/activity_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:textSize="12sp"
            android:enabled="true"
            android:background="@drawable/login_border"
            android:hint="@string/email_mobile_no"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/activity_sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:enabled="true"
            android:background="@drawable/login_border"
            android:hint="Password"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/com_facebook_blue"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OR"
            android:textColor="#fff"
            android:textSize="15sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_sign_up_main"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Already have an account ?  " />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/com_facebook_blue"
            android:layout_height="wrap_content"
            android:id="@+id/tv_log_in"
            android:textSize="18sp"
            android:text="Log In" />
    </LinearLayout>
</RelativeLayout>
